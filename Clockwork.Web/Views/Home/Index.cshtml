@{
    ViewBag.Title = "AWH Clockwork Project";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Your current timezone : <span id="localTimeZone" class="bolder">@ViewData["LocalTimeZone"]</span></h3>
        </div>
        <div class="panel-body">
            <ul class="nav nav-pills">
                <li role="presentation" class="active">
                    <button type="submit" class="btn btn-primary" onclick="GetTime()"><i class="glyphicon glyphicon-hourglass"></i> Get the Time</button>
                </li>
                <li role="presentation">
                    <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#timeZoneModal"><i class="glyphicon glyphicon-cloud"></i> Request TimeZone</button>
                </li>
            </ul>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            I.P. Address
                        </th>
                        <th>
                            Time
                        </th>
                        <th>
                            UTC Time
                        </th>
                    </tr>
                </thead>
                <tbody class="tbody"></tbody>
                <tfoot>

                </tfoot>
            </table>
        </div>
    </div>
<!-- Modal -->
<div class="modal fade" id="timeZoneModal" tabindex="-1" role="dialog" aria-labelledby="timeZoneModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="timeZoneModalLabel">Select Timezone</h4>
            </div>
            <div class="modal-body">
                @{Html.RenderAction("TimeZone", "Home");}
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" data-dismiss="modal" onclick="RequestTime()"><i class="glyphicon glyphicon-ok-circle"></i> OK</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-remove-circle"></i> Close</button>
            </div>
        </div>
    </div>
</div>
